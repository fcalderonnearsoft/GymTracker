<%= form_for @evaluation do |f| %>

<div class="form-group"> 
    <%= f.label :exercise_id %>
    <%= f.collection_select(:exercise_id, Exercise.order(:name), :id, :name, prompt: true, class: 'form-control') %>
</div>

<div class="form_group">
    <%= f.label :evaluation_day %>
    <%= f.date_select :evaluation_day %>
</div>

<div class="form_group">
    <%= f.label :type_evaluation %>
    <%= f.select :type_evaluation, [['Time', 1], ['Reps', 2], ['Weight', 3]] %>
</div>

<%= f.submit %>
<% end %>

<%= link_to t('back'), evaluations_path %>