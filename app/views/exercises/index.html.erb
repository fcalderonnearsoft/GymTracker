<h1><%= t('exercise.list') %> </h1>

<%= link_to  t('exercise.new-button'), new_exercise_path %>


<table>
    <thead>
        <tr>
            <th> Name </th>
            <th> Body part </th>
        </tr>
    </thead>
    <tbody>
        <% if @exercises.blank? %>
            <tr>
                <td colspan=2> <%= t('exercise.errors.no-exercises') %> </td>
            </tr>
        <% elsif %>
            <% @exercises.each do |exercise| %>
            <tr>
                <td> <% exercise.name %> </td>
                <td> <% exercise.body_part %> </td>
            </tr> 
            <% end %>
        <% end %>
    </tbody>
</table>