<%= form_for @exercise do |f| %>

<div>
    <%= f.label t('exercise.name') %>
    <%= f.text_field :name, required: :required %>
</div>

<div>
    <%= f.label t('exercise.muscle-worked-on') %>
    <%= f.text_field :body_part, required: :required %>
</div>

<div>
    <%= f.submit t('update') %>
</div>
<% end %>

<%= link_to  t('back') , exercises_path %>